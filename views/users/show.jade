extends ../layout

block content
  .authform
    .page-header
      .panel.panel-primary
        .panel-title
          | Informacion de Usuario
        .panel-body
          .row
            .col-md-3.col-lg-3
              img.img-circle(alt='Profile pic', src='/img/profile_pic.png')
            .col-md-9.col-lg-9
              strong= user.name
              br
          br
          .row
            table.table.table-condensed.table-user-information
              tr
                td Correo
                th= user.email
              tr
                td Nombre de Usuario
                th= user.username
